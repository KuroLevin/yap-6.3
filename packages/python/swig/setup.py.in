def visit(d0, pls):
    for (r, ds, fs) in walk('.'):
        for f in fs:
            f0, ext = os.path.splitext(f)
            if (ext == 'yap' or ext == 'pl' or ext == 'so' or ext == 'dll' or ext == 'yss'):
                pls += [os.path.join(r, f)]
    for i in ds:
        pls = visit(os.path.join(d0, i), pls)
    return pls


